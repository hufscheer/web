{
  "name": "@hcc/toolkit",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "rm -rf dist && node build.js && tsc",
    "dev": "node build.js --watch",
    "start": "next start",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "biome lint --fix",
      "biome format --write"
    ]
  },
  "sideEffects": false,
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles.css": {
      "import": "./dist/index.css"
    }
  },
  "files": [
    "dist"
  ],
  "peerDependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@hcc/typescript-config": "workspace:*",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "esbuild": "^0.25.9",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "dayjs": "^1.11.13"
  }
}
